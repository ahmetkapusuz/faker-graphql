{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}